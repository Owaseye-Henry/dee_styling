<%-include("adminheader")%>

<div class="cart-table-area section-padding-100">
    <div class="container-fluid">
       

  
        <!-- galleries -->
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="checkout_details_area mt-50 clearfix">

                    <div class="cart-title">
                        <h2> Upload to Gallery </h2>
                    </div>

                    <form id="edit-gallery-form">
                        <div class="row">
                            <input type="hidden" name="hidden" id="id" value="<%=id%>">
                            <div class="col-md-6 mb-3">
                                <input type="text" name="title" class="form-control" id="first_name" value="<%=one.title%>" placeholder="image title"  required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input type="text" name="message" class="form-control" id="last_name" value="<%=one.message%>" placeholder="message ( 30 characters max)" required>
                            </div>
                           
                            <div class="col-12 mb-3">
                                <input type="file" name="image" class="form-control" id="g-img" placeholder="image file" value="<%=one.image%>">
                            </div>
                           
                            
                            
                            <div class="col-12 mb-3">
                                <button type="submit"  class="btn amado-btn w-100">Upload image</button>
                               <!-- <a href="#" class="btn amado-btn w-100">add product</a> -->
                           </div>

                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
</div>


<script src="/custom/edit_form_gallery.js"></script>

<%-include("footer")%>